                "tags": [
                    "Laboratórios"
                ],
                "summary": "Criar laboratório",
                "operationId": "60dc0ed42701f528ad8a0bf08b1a8111",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Laboratório de Informática"
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "Descrição do laboratório",
                                        "nullable": true
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Laboratório criado com sucesso"
                    },
                    "401": {
                        "description": "Não autenticado"
                    },
                    "422": {
                        "description": "Erro de validação"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
